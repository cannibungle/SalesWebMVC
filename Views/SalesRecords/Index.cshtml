@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group col-md-8 mb-3">
                    <label for="minDate" class="control-label">Min Date</label>
                    <input type="date" name="minDate" class="form-control" />
                </div>
                <div class="form-group col-md-8 mb-3">
                    <label for="maxDate" class="control-label">Max Date</label>
                    <input type="date" name="maxDate" class="form-control col-sm-6" />                    
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>